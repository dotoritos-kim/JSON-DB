{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "src",
		"isolatedModules": true,
		"typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"]
	},
	"include": ["src/**/*", "jest.setup.ts", "__tests__"],
	"exclude": ["src/**/*.test.ts"]
}
